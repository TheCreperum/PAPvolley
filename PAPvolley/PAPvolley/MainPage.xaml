<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="PAPvolley.MainPage"
             Title="First Page"
             BackgroundColor="SlateGray"
             NavigationPage.HasNavigationBar="False">

    <AbsoluteLayout>
        <!-- Place new controls here -->
        
        <Button Text="Create Team"
                TextColor="Black"
                FontSize="20"
                Clicked="Onbtn_Clicked"
                BackgroundColor="DarkGray"
                AbsoluteLayout.LayoutBounds=".5,0.7,260,50"
                AbsoluteLayout.LayoutFlags="PositionProportional"/>
        
        <Button Text="Choose Team"
                TextColor="Black"
                FontSize="20"
                Clicked="Onbtn_Clicked2"
                BackgroundColor="DarkGray"
                AbsoluteLayout.LayoutBounds=".5,0.6,260,50"
                AbsoluteLayout.LayoutFlags="PositionProportional"/>
        
        <Image Source="logo.png"
               Scale="1.2"
               AbsoluteLayout.LayoutBounds=".5,0.25"
                AbsoluteLayout.LayoutFlags="PositionProportional"
               />
    </AbsoluteLayout>

</ContentPage>
